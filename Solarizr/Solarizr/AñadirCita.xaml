    <ScrollViewer>
        <Grid Name="grid" Background="Orange">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
                <AppBarButton Name="appbtnCarpetaImagenes"  Label="Imagenes" Icon="MoveToFolder" Foreground="Black" Click="AppbtnCarpetaImagenes_Click">
                    <AppBarButton.RenderTransform>
                        <CompositeTransform ScaleX="2" ScaleY="2"/>
                    </AppBarButton.RenderTransform>
                </AppBarButton>
                <AppBarButton Margin="70,0" Name="appbtnLocalizacion" Icon="Home" Label="Localizacion"  Foreground="Black" >
                    <AppBarButton.RenderTransform>
                        <CompositeTransform ScaleX="2" ScaleY="2"/>
                    </AppBarButton.RenderTransform>
                </AppBarButton>
            </StackPanel>

            <StackPanel Margin="0,150,0,0" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" Name="panelCentrado" Orientation="Vertical">
                <TextBox HorizontalAlignment="Left" Name="textNombre" BorderThickness="0" PlaceholderText="Nombre" Width="200" PlaceholderForeground="Gray" Background="White"></TextBox>
                <TextBox HorizontalAlignment="Left" Margin="0,20,0,0"  Name="textDireccion" BorderThickness="0" PlaceholderText="Dirección"  Width="200" PlaceholderForeground="Gray" Background="White" ></TextBox>
                <TextBox HorizontalAlignment="Left" Margin="0,20,0,0" Name="textFecha" BorderThickness="0" PlaceholderText="Fecha" Width="200" PlaceholderForeground="Gray" Background="White" ></TextBox>
                <TextBox HorizontalAlignment="Left" Name="txtbox" PlaceholderText="Observaciones" BorderThickness="0" Margin="0,30,0,0" Width="300" Height="100" MaxHeight="200" MaxWidth="400" PlaceholderForeground="Gray" Background="White" ></TextBox>
                <Button HorizontalAlignment="Center" Background="Blue" Margin="0,30,0,0" Foreground="White" CornerRadius="15"  x:Name="btnGuardar" Width="80" Height="30" Click="btnGuardar_Click">Guardar</Button>

            </StackPanel>

        </Grid>
    </ScrollViewer>
