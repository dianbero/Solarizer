<Page
    x:Class="Solarizr.ListaCitas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Solarizr"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <RelativePanel Background="Orange">

        <ListView x:ConnectionId='2' x:Name="DatesList" MaxHeight="660" MaxWidth="700" Margin="10, 0, 10, 0" ScrollViewer.VerticalScrollMode="Enabled"
          ScrollViewer.VerticalScrollBarVisibility="Visible" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate                      >
                    <Grid x:ConnectionId='3' x:Name="Grid01" Background="Orange">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock x:ConnectionId='4' x:Name="NombreCliente"                 Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Foreground="White">Paco no sabe</TextBlock>
                        <TextBlock x:Name="Direccion" Grid.Row="1" Grid.Column="0" Foreground="GhostWhite">Calle de la piruleta nº2</TextBlock>
                        <TextBlock x:Name="FechaCita" Grid.Row="2" Grid.Column="0" >24/09/2019</TextBlock>
                        <TextBlock x:Name="HoraCita" Grid.Row="2" Grid.Column="1" >13:00</TextBlock>
                        <AppBarButton Icon="Library" Grid.Row="1" Grid.Column="1" Height="25" Width="35" Margin="5" HorizontalAlignment="Right"></AppBarButton>
                        <Line x:Name="Line01" Stroke="Black" StrokeThickness="2" Margin="0, 0, 0, 20" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" X2="670"></Line>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

            <x:String>Pera</x:String>
            <x:String>Pera1</x:String>
            <x:String>Pera2</x:String>
            <x:String>Pera3</x:String>
            <x:String>Pera4</x:String>
            <x:String>Pera5</x:String>
            <x:String>Pera6</x:String>
            <x:String>Pera6</x:String>
        </ListView>
    </RelativePanel>

</Page>

