<Page
    x:Class="Solarizr.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Solarizr"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <ListView x:ConnectionId='2' x:Name="DatesList" HorizontalAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate                      >
                    <Grid><!-- x:ConnectionId='4' Como hago que el grid ocupe todo el ancho-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock x:ConnectionId='5' x:Name="NombreCliente"                 Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">Paco no sabe</TextBlock>
                        <TextBlock x:Name="Direccion" Grid.Row="1" Grid.Column="0">Calle de la piruleta nº2</TextBlock>
                        <TextBlock x:Name="FechaCita" Grid.Row="2" Grid.Column="0">24/09/2019</TextBlock>
                        <TextBlock x:Name="HoraCita" Grid.Row="2" Grid.Column="1" >13:00</TextBlock>
                        <AppBarButton Icon="Library" Grid.Row="1" Grid.Column="1" MaxHeight="25" MaxWidth="35" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"></AppBarButton>
                        <Line Stroke="Black" StrokeThickness="2" Margin="0, 0, 0, 20" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" X2="200"></Line>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <x:String>Pera</x:String>
            <x:String>Pera1</x:String>
            <x:String>Pera2</x:String>
            <x:String>Pera3</x:String>
        </ListView>
    </StackPanel>
</Page>

