            <AppBarButton x:Name="btnListaCitas" Content="Lista de citas" Width="300" Click="btnListaCitas_Click"/>
            <AppBarButton x:Name="btnFicha" Content="Añadir Ficha de cita" Width="300" Click="btnFicha_Click"/>
            <!--<AppBarButton x:Name="btnCamara" Content="" Width="300"/>-->
        </StackPanel>
        <Frame Name="MyFrame"></Frame>
    </StackPanel>
</Page>
